<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigCuenta"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/configCuentaBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="429dp"
        android:elevation="@dimen/elevation_bar"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/nombre_ConfCuentaBar"
            android:paddingTop="@dimen/top_titulo_bar"
            android:textStyle="bold"
            android:textSize="@dimen/nombre_mascota"
            android:textColor="#fff"
            />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/tfeNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configCuentaBar"
        android:layout_marginTop="20dp"
        android:hint="@string/nombreUsuario"
        />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tfeNombreUsuario"
        android:layout_marginTop="20dp"
        android:text="@string/guardarCuenta"
        />

</RelativeLayout>